<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Products</title>
</head>

<body>
    <% if (products) { %>
        <div style="width : 100%">
            <% products.forEach(product=> {%>
                <div class="card mb-5" style="width: 30%; margin: 2rem auto;">
                    <img src="data:image/jpeg;base64,<%= product.image %>" class="card-img-top" alt="..." height="400">
                    <div class="card-body">
                        <h1 class="card-title">
                            <%= product.name %>
                        </h1>
                        <p class="card-text">
                            <%= product.description %>
                        </p>
                        <p class="card-text">
                            <%= product.price %>
                        </p>
                        <p class="card-text">
                            <%= product.owner %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
        <% } %>
</body>

</html>